<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDomain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserName"
        android:layout_below="@+id/editTextDomain"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_below="@+id/editTextUserName"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editTextUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Domain"
        android:id="@+id/textViewDomain"
        android:layout_alignTop="@+id/editTextDomain"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username"
        android:id="@+id/textViewUserName"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/textViewPassword"
        android:layout_alignBottom="@+id/editTextPassword"
        android:layout_alignEnd="@+id/textViewUserName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submit"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextPassword" />
</RelativeLayout>
